/* Popup √∂ffnen */
function openLoadPopup() {
  const bg = document.getElementById("uf-load-popup-bg");

  if (!bg) {
    console.error("Popup-Element 'uf-load-popup-bg' NICHT gefunden!");
    return;
  }

  console.log("Popup wird ge√∂ffnet‚Ä¶");
  bg.style.display = "flex";
}

/* Popup schlie√üen */
function closeLoadPopup() {
  const bg = document.getElementById("uf-load-popup-bg");
  if (bg) bg.style.display = "none";
}

/* Charakter laden */
function triggerLoadChar() {
  const name = document.getElementById("uf-load-name")?.value.trim();
  const title = document.getElementById("uf-load-title")?.value.trim();

  if (!name || !title) {
    alert("Bitte Name und Titel eingeben.");
    return;
  }

  closeLoadPopup();
  loadPage3FromGist(name, title);
}

/* Cancel-Button erst nach DOM-Load verbinden */
document.addEventListener("DOMContentLoaded", () => {
  const cancelBtn = document.getElementById("uf-load-cancel");

  if (!cancelBtn) {
    console.error("Cancel-Button 'uf-load-cancel' NICHT gefunden!");
    return;
  }

  cancelBtn.addEventListener("click", closeLoadPopup);
  console.log("Cancel-Button erfolgreich verbunden.");
});
async function loadPage3FromCloud(name, title) {
  const filename = `undra_${name.trim().toLowerCase()}_${title.trim().toLowerCase()}.json`;
  
  async function debugLoadFromCloud(name, title) {
  const filename = `undra_${name.trim().toLowerCase()}_${title.trim().toLowerCase()}`;
  const url = `https://undra.djdrear.workers.dev/load/${filename}`;

  console.log("üîç Debug: Ladeversuch f√ºr", filename);
  console.log("üîó URL:", url);

  try {
    const res = await fetch(url);
    console.log("üåê Response-Status:", res.status);

    if (!res.ok) {
      const text = await res.text();
      console.warn("‚ö†Ô∏è Fehlertext vom Worker:", text);
      alert(`Fehler beim Laden:\n\nStatus ${res.status}\n${text}`);
      return;
    }

    const data = await res.json();
    console.log("üì¶ Geladene Daten:", data);

    if (!data || typeof data !== "object") {
      alert("‚ö†Ô∏è Ung√ºltiges JSON erhalten.");
      return;
    }

    alert(`‚úÖ Charakter "${data.name || name}" erfolgreich geladen (Debug-Modus).`);
  } catch (err) {
    console.error("‚ùå Netzwerkfehler:", err);
    alert("‚ùå Netzwerkfehler beim Laden.");
  }
}


  try {
    const res = await fetch(`https://undra.djdrear.workers.dev/load/${filename}`);

    if (!res.ok) {
      alert(`Charakter "${name} ${title}" nicht gefunden.`);
      return;
    }

    const data = await res.json();

    // Fallbacks erg√§nzen
    data.meta = data.meta || { name, title };
    data.currency = data.currency || { gold: 0, silver: 0, copper: 0 };
    data.inventory = data.inventory || {
      small: Array(10).fill(""),
      medium: Array(10).fill(""),
      large: Array(10).fill("")
    };
    data.vitals = data.vitals || {};
    data.upgrades = data.upgrades || {};
    data.zones = data.zones || {
      Z1: 0, Z2: 0, Z3: 0, Z4: 0, Z5: 0, Z6: 0, Z7: 0, Z8: 0
    };

    window.char = JSON.parse(JSON.stringify(data));
    saveToLocal();
    renderAll();

    alert(`Charakter "${char.meta.name}" erfolgreich geladen.`);
  } catch (err) {
    console.error(err);
    alert("Fehler beim Laden aus Cloudflare.");
  }
}
