<script>
/* ============================
STATE & LOCAL STORAGE (char‚Äëbasiert)
============================ */
window.char = window.char || {};   // char global verf√ºgbar machen

function loadFromLocal() {
  try {
    const raw = localStorage.getItem("char");
    if (raw) {
      const parsed = JSON.parse(raw);
      if (parsed && typeof parsed === "object") {
        window.char = parsed;
        return;
      }
    }
  } catch(e){
    console.warn("Lokale Daten ung√ºltig, Fallback.");
  }

  // Fallback-Struktur
  window.char = {
    meta: { name: "", title: "" },
    currency: { gold: 0, silver: 0, copper: 0 },
    inventory: {
      small: Array(10).fill(""),
      medium: Array(10).fill(""),
      large: Array(10).fill("")
    },
    vitals: {},
    upgrades: {},
    zones: {
      Z1: 0, Z2: 0, Z3: 0, Z4: 0, Z5: 0, Z6: 0, Z7: 0, Z8: 0
    }
  };
}

function saveToLocal() {
  try {
    localStorage.setItem("char", JSON.stringify(window.char));
  } catch(e){
    console.warn("Konnte lokalen Speicher nicht schreiben.", e);
  }
}

loadFromLocal();





/* ============================
CURRENCY ENGINE (char‚Äëbasiert)
============================ */
const currencyEngine = {
  gold: char.currency?.gold || 0,
  silver: char.currency?.silver || 0,
  copper: char.currency?.copper || 0,

  set(g, s, c) {
    this.gold = g || 0;
    this.silver = s || 0;
    this.copper = c || 0;

    this.render();

    // In char zur√ºckschreiben
    char.currency.gold = this.gold;
    char.currency.silver = this.silver;
    char.currency.copper = this.copper;

    saveToLocal();
  },

  addCopper(amount) {
    let total =
      this.gold * 10000 +
      this.silver * 100 +
      this.copper +
      (amount || 0);

    this.gold = Math.floor(total / 10000);
    total %= 10000;

    this.silver = Math.floor(total / 100);
    this.copper = total % 100;

    this.set(this.gold, this.silver, this.copper);
  },

  render() {
    const g = document.getElementById("money-gold");
    const s = document.getElementById("money-silver");
    const c = document.getElementById("money-copper");

    if (g) g.textContent = this.gold;
    if (s) s.textContent = this.silver;
    if (c) c.textContent = this.copper;
  }
};




/* ============================
VITALWERTE
============================ */
function updateVitalsDisplayFromState() {
  const v = char.vitals || {};
  const u = char.upgrades || {};

  const set = (id, value) => {
    const el = document.getElementById(id);
    if (el) el.textContent = value;
  };

  // Vitalwerte
  set("vital-le", v.LE || 0);
  set("vital-dyn", v.AU || 0);       // Ausdauer / Dynamik
  set("vital-ruest", v.RUEST || 0);
  set("vital-gg", v.GG || 0);
  set("vital-tc", v.TC || 0);

  // Aufwertungen
  set("upgrade-le", u.LE || 0);
  set("upgrade-ruest", u.RUEST || 0);
  set("upgrade-au", u.AU || 0);
  set("upgrade-gg", u.GG || 0);
  set("upgrade-tc", u.TC || 0);
}

/* ============================
INVENTAR
============================ */
function renderInventoryColumn(container, category) {
  if (!container) return;
  container.innerHTML = "";

  for (let i = 0; i < 10; i++) {
    const row = document.createElement("div");
    row.className = "inv-row";

    const input = document.createElement("input");
    input.value = char.inventory[category][i] || "";
    input.style.flex = "1";

    input.addEventListener("change", () => {
      char.inventory[category][i] = input.value.trim();
      saveToLocal();
    });

    input.setAttribute("draggable", "true");

    input.addEventListener("dragstart", e => {
      e.dataTransfer.setData("text/plain", JSON.stringify({ category, index: i }));
    });

    input.addEventListener("dragover", e => e.preventDefault());

    input.addEventListener("drop", e => {
      e.preventDefault();
      try {
        const data = JSON.parse(e.dataTransfer.getData("text/plain"));

        const temp = char.inventory[data.category][data.index];
        char.inventory[data.category][data.index] = char.inventory[category][i];
        char.inventory[category][i] = temp;

        saveToLocal();
        renderInventory();
      } catch (err) {}
    });

    row.appendChild(input);
    container.appendChild(row);
  }
}

function renderInventory() {
  renderInventoryColumn(document.getElementById("inv-small"), "small");
  renderInventoryColumn(document.getElementById("inv-medium"), "medium");
  renderInventoryColumn(document.getElementById("inv-large"), "large");
}







/* ============================
ZONEN & R√úSTUNGSSYSTEM
============================ */
function renderZonesFromState() {
  const zoneList = document.getElementById("zoneList");
  if (!zoneList) return;

  const zones = char.zones || {};
  zoneList.innerHTML = "";

  for (let i = 1; i <= 8; i++) {
    const name =
      document.querySelector(`#zoneSelectGrid div[data-value="${i}"]`)
        ?.textContent || `Zone ${i}`;

    const value = zones[`Z${i}`] ?? 0;

    const row = document.createElement("div");
    row.className = "zone-row";
    row.textContent = `${name}: ${value}`;
    zoneList.appendChild(row);
  }
}

function applyDamage() {
  const selected = document.querySelector("#zoneSelectGrid .active-zone");
  const input = document.getElementById("damageInput");
  const damage = parseInt(input?.value || "0");

  if (!selected || isNaN(damage)) return;

  const zoneId = selected.getAttribute("data-value");
  const key = `Z${zoneId}`;

  const zones = char.zones || {};
  zones[key] = Math.max(0, (zones[key] || 0) - damage);

  char.zones = zones;
  saveToLocal();
  renderZonesFromState();
}

function openArmorPopup() {
  const selected = document.querySelector("#zoneSelectGrid .active-zone");
  if (!selected) return;

  const zoneId = selected.getAttribute("data-value");
  const name = selected.textContent;
  const key = `Z${zoneId}`;

  const value = char.zones?.[key] ?? 0;

  document.getElementById("popupTitle").textContent = name;
  document.getElementById("popupContent").innerHTML =
    `<input id="armorValueInput" type="number" value="${value}" />`;

  document.getElementById("armorPopup").style.display = "flex";
}

function confirmArmorAction() {
  const selected = document.querySelector("#zoneSelectGrid .active-zone");
  const input = document.getElementById("armorValueInput");
  const value = parseInt(input?.value || "0");

  if (!selected || isNaN(value)) return;

  const zoneId = selected.getAttribute("data-value");
  const key = `Z${zoneId}`;

  const zones = char.zones || {};
  zones[key] = value;

  char.zones = zones;
  saveToLocal();
  renderZonesFromState();
  closeArmorPopup();
}

function closeArmorPopup() {
  document.getElementById("armorPopup").style.display = "none";
}

/* Zonen-Auswahl + SVG-Sync */
function highlightSvgZone(zoneId) {
  document
    .querySelectorAll(".armor-zone")
    .forEach(z => z.classList.remove("active-zone-svg"));

  const svgZone = document.getElementById(`zone${zoneId}`);
  if (svgZone) svgZone.classList.add("active-zone-svg");
}

document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll("#zoneSelectGrid div").forEach(el => {
    el.addEventListener("click", () => {
      document
        .querySelectorAll("#zoneSelectGrid div")
        .forEach(d => d.classList.remove("active-zone"));

      el.classList.add("active-zone");
      highlightSvgZone(el.getAttribute("data-value"));
    });
  });

  document.querySelectorAll(".armor-zone").forEach(svg => {
    svg.addEventListener("click", () => {
      const zoneId = svg.id.replace("zone", "");

      document
        .querySelectorAll("#zoneSelectGrid div")
        .forEach(d => d.classList.remove("active-zone"));

      const match = document.querySelector(
        `#zoneSelectGrid div[data-value="${zoneId}"]`
      );

      if (match) match.classList.add("active-zone");

      highlightSvgZone(zoneId);
    });
  });
});






/* ============================
ATTRIBUTE / SEITE 3 APPLY
============================ */
function undraApplyStateToPage3() {
  const set = (id, value) => {
    const el = document.getElementById(id);
    if (el) el.textContent = value;
  };

  const a = char.attributes || {};

  set("val-ff", a.FF || 0);
  set("val-kk", a.KK || 0);
  set("val-kb", a.KB || 0);
  set("val-ch", a.CH || 0);
  set("val-gz", a.GZ || 0);
  set("val-it", a.IT || 0);
  set("val-ve", a.VE || 0);
  set("val-fk", a.FK || 0);
  set("val-ge", a.GE || 0);
  set("val-ko", a.KO || 0);
  set("val-ss", a.SS || 0);
  set("val-an", a.AN || 0);
  set("val-as", a.AS || 0);
  set("val-tc", a.TC || 0);
  set("val-te", a.TE || 0);

  updateVitalsDisplayFromState();
}

/* ============================
CLOUD SAVE / LOAD (ENTFERNT)
============================ */
// Dieser Block wurde vollst√§ndig entfernt,
// da Seite 3 k√ºnftig √ºber GitHub Gist l√§dt und speichert.




async function loadPage3FromGist(name, title) {
  const filename = `undra_${name.trim().toLowerCase()}_${title.trim().toLowerCase()}.json`;

  try {
    const res = await fetch("https://api.github.com/users/djdrear/gists");
    const gists = await res.json();

    if (!Array.isArray(gists)) {
      alert("Konnte Gist-Liste nicht laden.");
      return;
    }

    let rawUrl = null;

    for (const gist of gists) {
      const files = gist.files || {};
      for (const key in files) {
        if (key.toLowerCase() === filename) {
          rawUrl = files[key].raw_url;
          break;
        }
      }
      if (rawUrl) break;
    }

    if (!rawUrl) {
      alert(`Charakter "${name} ${title}" nicht gefunden.`);
      return;
    }

    const dataRes = await fetch(rawUrl);
    const data = await dataRes.json();

    // Fallbacks erg√§nzen
    data.meta = data.meta || { name, title };
    data.currency = data.currency || { gold: 0, silver: 0, copper: 0 };
    data.inventory = data.inventory || {
      small: Array(10).fill(""),
      medium: Array(10).fill(""),
      large: Array(10).fill("")
    };
    data.vitals = data.vitals || {};
    data.upgrades = data.upgrades || {};
    data.zones = data.zones || {
      Z1: 0, Z2: 0, Z3: 0, Z4: 0, Z5: 0, Z6: 0, Z7: 0, Z8: 0
    };

    window.char = JSON.parse(JSON.stringify(data));
    saveToLocal();
    renderAll();

    alert(`Charakter "${char.meta.name}" erfolgreich geladen.`);
  } catch (err) {
    console.error(err);
    alert("Fehler beim Laden aus Gist.");
  }
}
async function savePage3ToGist() {
  const filename = `undra_${char.meta.name.trim().toLowerCase()}_${char.meta.title.trim().toLowerCase()}.json`;
  const token = localStorage.getItem("github_token"); // Token muss vorher gespeichert werden

  if (!token) {
    alert("Kein GitHub‚ÄëToken gefunden.");
    return;
  }

  try {
    const res = await fetch("https://api.github.com/gists", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${token}`,
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        description: "UNDRA Character Save",
        public: false,
        files: {
          [filename]: {
            content: JSON.stringify(char, null, 2)
          }
        }
      })
    });

    if (!res.ok) {
      alert("Fehler beim Speichern in Gist.");
      return;
    }

    alert("Charakter erfolgreich gespeichert.");
  } catch (err) {
    console.error(err);
    alert("Netzwerkfehler beim Speichern.");
  }
}
async function searchCharactersInGist(query) {
  try {
    const res = await fetch("https://api.github.com/users/djdrear/gists");
    const gists = await res.json();

    if (!Array.isArray(gists)) {
      alert("Konnte Gist-Liste nicht laden.");
      return;
    }

    const results = [];

    for (const gist of gists) {
      const files = gist.files || {};
      for (const key in files) {
        if (key.toLowerCase().includes("undra_") && key.toLowerCase().includes(query.toLowerCase())) {
          results.push(key);
        }
      }
    }

    if (results.length === 0) {
      alert("Keine passenden Charaktere gefunden.");
    } else {
      alert(`Gefundene Charaktere:\n\n${results.join("\n")}`);
    }
  } catch (err) {
    console.error(err);
    alert("Fehler bei der Gist‚ÄëSuche.");
  }
}
async function migrateLocalCharToGist() {
  const name = char?.meta?.name?.trim();
  const title = char?.meta?.title?.trim();
  if (!name || !title) return;

  const filename = `undra_${name.toLowerCase()}_${title.toLowerCase()}.json`;
  const token = localStorage.getItem("github_token");

  if (!token) return;

  try {
    const res = await fetch("https://api.github.com/users/djdrear/gists");
    const gists = await res.json();

    let exists = false;
    for (const gist of gists) {
      const files = gist.files || {};
      if (filename in files) {
        exists = true;
        break;
      }
    }

    if (!exists) {
      await savePage3ToGist();
      console.log("Charakter wurde automatisch in Gist migriert.");
    }
  } catch (err) {
    console.warn("Migration fehlgeschlagen:", err);
  }
}
function setGithubToken(token) {
  localStorage.setItem("github_token", token.trim());
  alert("GitHub‚ÄëToken gespeichert.");
}

/* ============================
RENDER ALL
============================ */
function renderAll() {
  currencyEngine.render();
  renderInventory();
  renderZonesFromState();
  updateVitalsDisplayFromState();
  undraApplyStateToPage3();
}
